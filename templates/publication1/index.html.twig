{% extends 'back.html.twig' %}

{% block title %}Publication index{% endblock %}

{% block body %}
    <h1>Publication index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_user</th>
                <th>Titre_pub</th>
                <th>Contenu_pub</th>
                <th>Date_pub</th>
                <th>Nb_signals</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publication in publications %}
            <tr>
                <td>{{ publication.id }}</td>
                <td>{{ publication.idUser }}</td>
                <td>{{ publication.titrePub }}</td>
                <td>{{ publication.contenuPub }}</td>
                <td>{{ publication.datePub ? publication.datePub|date('Y-m-d') : '' }}</td>
                <td>{{ publication.nbSignals }}</td>
                <td>
                    <a href="{{ path('app_publication1_show', {'id': publication.id}) }}">show</a>
                    <a href="{{ path('app_publication1_edit', {'id': publication.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_publication1_new') }}">Create new</a>
{% endblock %}
